@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.Extensions.Localization
@using Resources
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<div class="sidebar-header">
    <a href="/" class="app-brand">
        <div class="app-brand-logo">PC</div>
        <span>ProCleaning</span>
    </a>
</div>

<ul class="sidebar-menu">
    <!-- SECTION: MAIN -->
    <li class="menu-header">
        <span>@Resources.LangNavigation.Section_Main</span>
    </li>

    <li class="menu-item">
        <NavLink class="menu-link" href="" Match="NavLinkMatch.All">
            <i class="bi bi-house-door menu-icon"></i>
            <span>@Resources.LangNavigation.Home</span>
        </NavLink>
    </li>

    <li class="menu-item">
        <NavLink class="menu-link" href="works">
            <i class="bi bi-briefcase menu-icon"></i>
            <span>@Resources.LangNavigation.WorkOverview</span>
        </NavLink>
    </li>

    <!-- SECTION: CODELISTS (Admin & Manager only) -->
    <AuthorizeView Roles="Admin,Manager">
        <Authorized>
            <li class="menu-header">
                <span>@Resources.LangNavigation.Section_CodeLists</span>
            </li>

            <li class="menu-item">
                <NavLink class="menu-link" href="employees">
                    <i class="bi bi-people menu-icon"></i>
                    <span>@Resources.LangNavigation.Employees</span>
                </NavLink>
            </li>

            <li class="menu-item">
                <NavLink class="menu-link" href="wages">
                    <i class="bi bi-cash-stack menu-icon"></i>
                    <span>@Resources.LangNavigation.Wages</span>
                </NavLink>
            </li>

            <li class="menu-item">
                <NavLink class="menu-link" href="cars">
                    <i class="bi bi-truck menu-icon"></i>
                    <span>@Resources.LangNavigation.Cars</span>
                </NavLink>
            </li>

            <li class="menu-item">
                <NavLink class="menu-link" href="platforms">
                    <i class="bi bi-ladder menu-icon"></i>
                    <span>@Resources.LangNavigation.Platforms</span>
                </NavLink>
            </li>

            <li class="menu-item">
                <NavLink class="menu-link" href="carts">
                    <i class="bi bi-cart menu-icon"></i>
                    <span>@Resources.LangNavigation.Carts</span>
                </NavLink>
            </li>
        </Authorized>
    </AuthorizeView>
</ul>

<div class="sidebar-footer">
    <form method="post" action="/account/logout">
        <AntiforgeryToken />
        <button type="submit" class="btn btn-danger w-100 d-flex align-items-center justify-content-center">
            <i class="bi bi-box-arrow-right me-2"></i>
            Odhlásiť sa
        </button>
    </form>
</div>
