@page "/cars"
@using Microsoft.AspNetCore.Authorization
@using ProCleaningBlazorAi.Application.DTOs
@using ProCleaningBlazorAi.Application.Interfaces.Services
@attribute [Authorize(Roles = "Admin,Manager")]
@inject ICarService Service
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Autá | ProCleaning</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title mb-0">Autá</h1>
    <a href="cars/new" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i> Pridať auto
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (items == null)
        {
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (!items.Any())
        {
            <p class="text-muted text-center my-4">Žiadne autá sa nenašli.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Model</th>
                            <th>ŠPZ</th>
                            <th>VIN</th>
                            <th>Platnosť do</th>
                            <th class="text-end">Akcie</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in items)
                        {
                            <tr>
                                <td>@item.Model</td>
                                <td>@item.Plate</td>
                                <td>@item.Vin</td>
                                <td>@item.ValidTo?.ToShortDateString()</td>
                                <td class="text-end">
                                    <a href="cars/edit/@item.Id" class="btn-icon text-primary" title="Upraviť">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button class="btn-icon text-danger" @onclick="() => Delete(item.Id)" title="Vymazať">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private List<CarDto>? items;

    protected override async Task OnInitializedAsync()
    {
        await LoadItems();
    }

    private async Task LoadItems()
    {
        items = await Service.GetAllAsync();
    }

    private async Task Delete(Guid id)
    {
        if (!await JS.InvokeAsync<bool>("confirm", "Naozaj chcete vymazať toto auto?"))
        {
            return;
        }

        await Service.DeleteAsync(id);
        await LoadItems();
    }
}

